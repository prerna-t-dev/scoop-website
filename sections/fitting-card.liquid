<div {% render 'section-properties' %}>
  <div class="section-stack">
    <div class="quiz-card quiz-card--align-mobile-{{ section.settings.text_alignment_mobile }} quiz-card--align-desktop-{{ section.settings.text_alignment_desktop }}">
      {%- if section.settings.heading != blank -%}
        <h2 class="quiz-card__heading">{{ section.settings.heading | newline_to_br }}</h2>
      {%- endif -%}

      {%- if section.settings.eyebrow_text != blank -%}
        <p class="quiz-card__eyebrow">{{ section.settings.eyebrow_text }}</p>
      {%- endif -%}

      {%- if section.settings.icon_svg != blank -%}
        <div class="quiz-card__icon">
          {{ section.settings.icon_svg }}
        </div>
      {%- endif -%}

      {%- if section.settings.content != blank -%}
        <div class="quiz-card__content">
          {{ section.settings.content }}
        </div>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        {%- render 'button', 
          content: section.settings.button_text, 
          href: section.settings.button_link,
          size: section.settings.button_size,
          style: section.settings.button_style,
          secondary: section.settings.button_secondary,
          background: section.settings.button_background,
          text_color: section.settings.button_text_color
        -%}
      {%- endif -%}
    </div>
  </div>
</div>

