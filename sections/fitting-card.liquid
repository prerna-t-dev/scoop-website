<style>
  #shopify-section-{{ section.id }} {
    --quiz-card-background: {{ section.settings.background_color }};
  }

  #shopify-section-{{ section.id }} .quiz-card {
    background: var(--quiz-card-background);
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.padding_mobile }}px;
    text-align: left;
    position: relative;
    overflow: hidden;
    max-width: 850px;
    margin-left: auto;
    margin-right: auto;
    z-index: 1;
  }

  @media screen and (min-width: 1000px) {
    #shopify-section-{{ section.id }} .quiz-card {
        min-width: 850px;
    }
  }

  #shopify-section-{{ section.id }} .quiz-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background-position: center;
    background-repeat: no-repeat;
  }

  {%- if section.settings.background_image_mobile != blank -%}
    #shopify-section-{{ section.id }} .quiz-card::before {
      background-image: url('{{ section.settings.background_image_mobile | image_url: width: 1600 }}');
      background-size: contain;
      opacity: {{ section.settings.background_opacity_mobile | divided_by: 100.0 }};
    }
  {%- endif -%}

  #shopify-section-{{ section.id }} .quiz-card__eyebrow {
    font-size: {{ section.settings.eyebrow_font_size }}px;
    font-weight: {{ section.settings.eyebrow_font_weight }} !important;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-top: 12px;
    margin-bottom: 16px;
    color: {{ section.settings.eyebrow_color }};
  }

  #shopify-section-{{ section.id }} .quiz-card__heading {
    font-family: var(--heading-font-family);
    font-size: {{ section.settings.heading_font_size_mobile }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    line-height: 1;
    margin-bottom: 16px;
    color: {{ section.settings.heading_color }};
    font-style: {{ section.settings.heading_font_style }} !important;
  }

  #shopify-section-{{ section.id }} .quiz-card__icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin: 0 auto 14px;
    color: {{ section.settings.icon_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #shopify-section-{{ section.id }} .quiz-card__icon svg {
    width: 100%;
    height: 100%;
  }

  #shopify-section-{{ section.id }} .quiz-card__content {
    font-size: {{ section.settings.content_font_size_mobile }}px;
    line-height: 1.6;
    /* margin-bottom: 32px; */
    color: {{ section.settings.content_color }};
    max-width: {{ section.settings.content_max_width }}px;
    margin-left: auto;
    margin-right: auto;
  }

  #shopify-section-{{ section.id }} .quiz-card--align-mobile-left {
    text-align: left;
  }

  #shopify-section-{{ section.id }} .quiz-card--align-mobile-center {
    text-align: center;
  }

  #shopify-section-{{ section.id }} .quiz-card--align-mobile-right {
    text-align: right;
  }

  #shopify-section-{{ section.id }} .quiz-card--align-mobile-left .quiz-card__icon {
    justify-content: flex-start;
    margin-left: 0;
    margin-right: auto;
  }

  #shopify-section-{{ section.id }} .quiz-card--align-mobile-center .quiz-card__icon {
    justify-content: center;
    margin-left: auto;
    margin-right: auto;
  }

  #shopify-section-{{ section.id }} .quiz-card--align-mobile-right .quiz-card__icon {
    justify-content: flex-end;
    margin-left: auto;
    margin-right: 0;
  }

  #shopify-section-{{ section.id }} .quiz-card--align-mobile-left .quiz-card__content {
    margin-left: 0;
    margin-right: auto;
  }

  #shopify-section-{{ section.id }} .quiz-card--align-mobile-center .quiz-card__content {
    margin-left: auto;
    margin-right: auto;
  }

  #shopify-section-{{ section.id }} .quiz-card--align-mobile-right .quiz-card__content {
    margin-left: auto;
    margin-right: 0;
  }

  @media screen and (max-width: 419px) {
    #shopify-section-{{ section.id }} .quiz-card__icon {
      transform: scale(0.8);
      transform-origin: center;
    }
  }


  @media screen and (min-width: 420px) {
    {%- if section.settings.background_image_desktop != blank -%}
    #shopify-section-{{ section.id }} .quiz-card::before {
      background-image: url('{{ section.settings.background_image_desktop | image_url: width: 1600 }}');
      background-size: cover;
      opacity: {{ section.settings.background_opacity_desktop | divided_by: 100.0 }};
    }
    {%- endif -%}
  }

  @media screen and (min-width: 850px) {
    #shopify-section-{{ section.id }} .quiz-card {
      padding: {{ section.settings.padding_desktop }}px;
      min-width: 750px;
    }

    #shopify-section-{{ section.id }} .quiz-card__heading {
      font-size: {{ section.settings.heading_font_size_desktop }}px;
    }

    #shopify-section-{{ section.id }} .quiz-card__content {
      font-size: {{ section.settings.content_font_size_desktop }}px;
    }

    {%- if section.settings.background_image_desktop != blank -%}
    #shopify-section-{{ section.id }} .quiz-card::before {
      background-size: contain;
      opacity: {{ section.settings.background_opacity_desktop | divided_by: 100.0 }};
    }
    {%- endif -%}
  }

  @media screen and (min-width: 420px) {
    #shopify-section-{{ section.id }} .quiz-card--align-desktop-left {
      text-align: left;
    }

    #shopify-section-{{ section.id }} .quiz-card--align-desktop-center {
      text-align: center;
    }

    #shopify-section-{{ section.id }} .quiz-card--align-desktop-right {
      text-align: right;
    }

    #shopify-section-{{ section.id }} .quiz-card--align-desktop-left .quiz-card__icon {
      justify-content: flex-start;
      margin-left: 0;
      margin-right: auto;
    }

    #shopify-section-{{ section.id }} .quiz-card--align-desktop-center .quiz-card__icon {
      justify-content: center;
      margin-left: auto;
      margin-right: auto;
    }

    #shopify-section-{{ section.id }} .quiz-card--align-desktop-right .quiz-card__icon {
      justify-content: flex-end;
      margin-left: auto;
      margin-right: 0;
    }

    #shopify-section-{{ section.id }} .quiz-card--align-desktop-left .quiz-card__content {
      margin-left: 0;
      margin-right: auto;
    }

    #shopify-section-{{ section.id }} .quiz-card--align-desktop-center .quiz-card__content {
      margin-left: auto;
      margin-right: auto;
    }

    #shopify-section-{{ section.id }} .quiz-card--align-desktop-right .quiz-card__content {
      margin-left: auto;
      margin-right: 0;
    }
  }


  @media screen and (min-width: 1600px) {
    #shopify-section-{{ section.id }} .quiz-card {
      min-width: 1000px;
    }
  }
</style>

