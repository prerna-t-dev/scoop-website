    {
      "type": "image_picker",
      "id": "bottom_logo",
      "label": "Bottom logo image"
    },
    {
      "type": "range",
      "id": "bottom_logo_width",
      "min": 100,
      "max": 400,
      "step": 10,
      "unit": "px",
