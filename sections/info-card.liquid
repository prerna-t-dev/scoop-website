<div {% render 'section-properties' %}>
  <div class="section-stack">
    <div class="info-card">
      {%- if section.settings.background_image_mobile != blank or section.settings.background_image_desktop != blank -%}
        <picture>
          {%- if section.settings.background_image_desktop != blank -%}
            <source media="(min-width: 700px)" srcset="{{ section.settings.background_image_desktop | image_url: width: 1200 }}">
          {%- endif -%}
          {%- if section.settings.background_image_mobile != blank -%}
            <img src="{{ section.settings.background_image_mobile | image_url: width: 800 }}" class="info-card__image" alt="Background">
          {%- elsif section.settings.background_image_desktop != blank -%}
            <img src="{{ section.settings.background_image_desktop | image_url: width: 1200 }}" class="info-card__image" alt="Background">
          {%- endif -%}
        </picture>
      {%- endif -%}
      
      <div class="info-card__content {{ section.settings.mobile_text_position }} {{ section.settings.desktop_text_position }}">
        {%- if section.settings.eyebrow_text != blank -%}
          <p class="info-card__eyebrow">{{ section.settings.eyebrow_text }}</p>
        {%- endif -%}

        {%- if section.settings.heading_mobile != blank or section.settings.heading_desktop != blank -%}
          <div class="info-card__heading">
            {%- if section.settings.heading_mobile != blank -%}
              <div class="info-card__heading-mobile">{{ section.settings.heading_mobile }}</div>
            {%- endif -%}
            {%- if section.settings.heading_desktop != blank -%}
              <div class="info-card__heading-desktop">{{ section.settings.heading_desktop }}</div>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if section.settings.icon_svg != blank -%}
          <div class="info-card__icon">
            {{ section.settings.icon_svg }}
          </div>
        {%- endif -%}

        {%- if section.settings.content != blank -%}
          <div class="info-card__content-text">
            {{ section.settings.content }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_text != blank -%}
          {%- render 'button', 
            content: section.settings.button_text, 
            href: section.settings.button_link,
            size: section.settings.button_size,
            style: section.settings.button_style,
            secondary: section.settings.button_secondary,
            background: section.settings.button_background,
            text_color: section.settings.button_text_color
          -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

