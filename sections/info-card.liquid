<style>
  #shopify-section-{{ section.id }} {
    --info-card-background: {{ section.settings.background_color }};
  }

  #shopify-section-{{ section.id }} .info-card {
    background: var(--info-card-background);
    border-radius: {{ section.settings.border_radius }}px;
    position: relative;
    overflow: hidden;
    width: 100%;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
    z-index: 1;
    min-height: {{ section.settings.min_height_mobile }}px;
  }

  #shopify-section-{{ section.id }} .info-card__image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ section.settings.border_radius }}px;
  }


  #shopify-section-{{ section.id }} .info-card__content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    padding: {{ section.settings.padding_mobile }}px;
  }

  #shopify-section-{{ section.id }} .info-card__eyebrow {
    font-size: {{ section.settings.eyebrow_font_size }}px;
    font-weight: {{ section.settings.eyebrow_font_weight }} !important;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 16px;
    color: {{ section.settings.eyebrow_color }};
  }

  #shopify-section-{{ section.id }} .info-card__heading-mobile {
    font-family: var(--heading-font-family);
    font-size: {{ section.settings.heading_font_size_mobile }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    line-height: 1;
    margin-bottom: 16px;
    color: {{ section.settings.heading_color }};
    font-style: {{ section.settings.heading_font_style }} !important;
  }

  #shopify-section-{{ section.id }} .info-card__heading-desktop {
    font-family: var(--heading-font-family);
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    line-height: 1;
    margin-bottom: 16px;
    color: {{ section.settings.heading_color }};
    font-style: {{ section.settings.heading_font_style }} !important;
    display: none;
  }

  #shopify-section-{{ section.id }} .info-card__icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin: 0 0 14px 0;
    color: {{ section.settings.icon_color }};
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  #shopify-section-{{ section.id }} .info-card__icon svg {
    width: 100%;
    height: 100%;
  }

  #shopify-section-{{ section.id }} .info-card__content-text {
    font-size: {{ section.settings.content_font_size }}px;
    line-height: 1.6;
    margin-bottom: 32px;
    color: {{ section.settings.content_color }};
    max-width: {{ section.settings.content_max_width }}px;
  }

  


  @media screen and (min-width: 700px) {
    #shopify-section-{{ section.id }} .info-card__content {
      padding: {{ section.settings.padding_desktop }}px;
    }

    #shopify-section-{{ section.id }} .info-card__heading-mobile {
      display: none;
    }

    #shopify-section-{{ section.id }} .info-card__heading-desktop {
      display: block;
    }

    #shopify-section-{{ section.id }} .info-card__content-text {
      font-size: 18px;
      width: 60%;
      margin-left: auto;
      margin-right: auto;
    }

    #shopify-section-{{ section.id }} .info-card__icon {
      margin: 0 auto 14px;
      justify-content: center;
    }
  }

  @media screen and (min-width: 1200px) {
    #shopify-section-{{ section.id }} .section-full {
      padding-left: 212px !important;
      padding-right: 212px !important;
    }
  }
</style>

