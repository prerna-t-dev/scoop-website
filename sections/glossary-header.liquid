{%- unless section.settings.full_width -%}
  {%- render 'section-spacing-collapsing' -%}
{%- endunless -%}

<style>
  #shopify-section-{{ section.id }} {
    {%- if section.settings.full_width -%}
      --section-outer-spacing-block: 0;
      --section-spacing-inline: 0px;
    {%- endif -%}

    {%- if section.settings.allow_transparent_header -%}
      margin-block-start: calc(-1 * var(--header-height) * var(--section-is-first));
    {%- endif -%}
  }

  #shopify-section-{{ section.id }} .glossary-header__hero {
    position: relative;
    height: {{ section.settings.height_mobile | default: 220 }}px;
    overflow: hidden;
    width: 100%;
    border-radius: 10px;
  }

  #shopify-section-{{ section.id }} .glossary-header__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 10px;
  }

  #shopify-section-{{ section.id }} .glossary-header__overlay-container {
    margin-bottom: -60px;
  }

  #shopify-section-{{ section.id }} .glossary-header__overlay {
    position: relative;
    top: -60px;
    background: {{ section.settings.overlay_color | default: '#FF615C' }};
    border-radius: {{ section.settings.overlay_border_radius | default: 16 }}px;
    padding: {{ section.settings.overlay_padding_mobile | default: 40 }}px {{ section.settings.overlay_padding_mobile | default: 24 }}px;
    z-index: 2;
    width: auto;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .glossary-header__overlay > * {
    max-width: 600px;
    width: 100%;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .glossary-header__title {
    font-family: var(--heading-font-family);
    font-size: {{ section.settings.title_font_size_mobile | default: 42 }}px;
    font-weight: {{ section.settings.title_font_weight | default: 400 }};
    color: {{ section.settings.title_color | default: '#FFFFFF' }};
    line-height: 1.2;
    margin: 0 0 {{ section.settings.title_spacing_mobile | default: 12 }}px 0;
  }

  #shopify-section-{{ section.id }} .glossary-header__description {
    font-family: var(--text-font-family);
    font-size: {{ section.settings.description_font_size_mobile | default: 16 }}px;
    font-weight: {{ section.settings.description_font_weight | default: 400 }};
    color: {{ section.settings.description_color | default: '#FFFFFF' }};
    line-height: {{ section.settings.description_line_height | default: 1.5 }};
    margin: 0;
  }

  @media screen and (min-width: 700px) {
    #shopify-section-{{ section.id }} .glossary-header__hero {
      height: {{ section.settings.height_desktop | default: 570 }}px;
      border-radius: 24px;
    }

    #shopify-section-{{ section.id }} .glossary-header__image {
      border-radius: 24px;
    }

    #shopify-section-{{ section.id }} .glossary-header__overlay-container {
      margin-bottom: -80px;
    }

    #shopify-section-{{ section.id }} .glossary-header__overlay {
      border-radius: {{ section.settings.overlay_border_radius | default: 16 }}px;
      padding: {{ section.settings.overlay_padding_desktop | default: 60 }}px {{ section.settings.overlay_padding_desktop | default: 50 }}px;
      top: -80px;
      width: 80vw;
      max-width: {{ section.settings.overlay_max_width | default: 600 }}px;
      

     
    }

    #shopify-section-{{ section.id }} .glossary-header__overlay > * {
      max-width: 100%;
    }

    #shopify-section-{{ section.id }} .glossary-header__title {
      font-size: {{ section.settings.title_font_size_desktop | default: 56 }}px;
      margin-bottom: {{ section.settings.title_spacing_desktop | default: 16 }}px;
    }

    #shopify-section-{{ section.id }} .glossary-header__description {
      font-size: {{ section.settings.description_font_size_desktop | default: 18 }}px;
    }
  }

</style>

<div {% render 'section-properties' %} {% if section.settings.allow_transparent_header %}allow-transparent-header{% endif %}>
  {%- capture class -%}glossary-header__hero {% if section.settings.full_width %}full-bleed{% endif %}{%- endcapture -%}
  <div class="{{ class }}">
    {%- if section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'eager', class: 'glossary-header__image', alt: section.settings.image.alt | default: 'Glossary header' }}
    {%- else -%}
      <div style="width: 100%; height: 100%; background: #f5f5f5; position: absolute; top: 0; left: 0;"></div>
    {%- endif -%}

  </div>

  {%- comment -%} Overlay Container {%- endcomment -%}
  <div class="container glossary-header__overlay-container">
    <div class="glossary-header__overlay">
      {%- if section.settings.title != blank -%}
        <h1 class="glossary-header__title">{{ section.settings.title }}</h1>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <p class="glossary-header__description">{{ section.settings.description }}</p>
      {%- endif -%}
    </div>
  </div>
</div>

