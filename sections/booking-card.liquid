<style>
  #shopify-section-{{ section.id }} .booking-card {
    width: 100%;
    max-width: 680px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
  }

  #shopify-section-{{ section.id }} .booking-card__image-wrapper {
    position: relative;
    width: 100%;
    display: block;
  }

  #shopify-section-{{ section.id }} .booking-card__image {
    width: 100%;
    height: auto;
    display: block;
  }

  #shopify-section-{{ section.id }} .booking-card__image--desktop {
    display: none;
  }

  #shopify-section-{{ section.id }} .booking-card__content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.padding_mobile }}px;
    text-align: center;
    box-sizing: border-box;
  }

  #shopify-section-{{ section.id }} .booking-card__icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin: 0 0 2px 0;
    color: {{ section.settings.icon_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #shopify-section-{{ section.id }} .booking-card__icon svg {
    width: 100%;
    height: 100%;
  }

  #shopify-section-{{ section.id }} .booking-card__heading {
    font-family: var(--heading-font-family);
    font-size: {{ section.settings.heading_font_size_mobile }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    line-height: 1.2;
    margin-bottom: 16px;
    color: {{ section.settings.heading_color }};
    font-style: {{ section.settings.heading_font_style }} !important;
  }

  #shopify-section-{{ section.id }} .booking-card__content-text {
    font-size: {{ section.settings.content_font_size }}px;
    line-height: 1.6;
    /* margin-bottom: 18px; */
    color: {{ section.settings.content_color }};
  }

  #shopify-section-{{ section.id }} .booking-card__button-wrapper {
    margin-top: 8px;
  }

  #shopify-section-{{ section.id }} .booking-card__button-wrapper .button {
    background-color: #FFFFFF !important;
    color: #000000 !important;
    filter: drop-shadow(0px 1px 2px rgba(0, 0, 0, 0.1))
            drop-shadow(0px 2px 4px rgba(0, 0, 0, 0.1))
            drop-shadow(0px 4px 8px rgba(0, 0, 0, 0.1))
            drop-shadow(0px 8px 16px rgba(0, 0, 0, 0.1))
            drop-shadow(0px 16px 32px rgba(0, 0, 0, 0.1));
  }

  #shopify-section-{{ section.id }} .booking-card__button-wrapper .button:hover {
    background-color: #FFFFFF !important;
    color: #000000 !important;
  }

  @media screen and (min-width: 700px) {
    #shopify-section-{{ section.id }} .booking-card__image--mobile {
      display: none;
    }

    #shopify-section-{{ section.id }} .booking-card__image--desktop {
      display: block;
    }

    #shopify-section-{{ section.id }} .booking-card__content {
      padding: {{ section.settings.padding_desktop }}px;
    }

    #shopify-section-{{ section.id }} .booking-card__heading {
      font-size: {{ section.settings.heading_font_size_desktop }}px;
    }

    #shopify-section-{{ section.id }} .booking-card__content-text {
      font-size: {{ section.settings.content_font_size_desktop }}px;
      margin-bottom: 18px;
    }
  }
</style>

