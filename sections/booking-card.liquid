<div {% render 'section-properties' %}>
  <div class="section-stack">
    <div class="booking-card">
      {%- if section.settings.card_image_mobile != blank or section.settings.card_image_desktop != blank -%}
        <div class="booking-card__image-wrapper">
          {%- if section.settings.card_image_mobile != blank -%}
            {{ section.settings.card_image_mobile | image_url: width: 800 | image_tag: loading: 'lazy', class: 'booking-card__image booking-card__image--mobile', alt: 'Booking card' }}
          {%- endif -%}
          {%- if section.settings.card_image_desktop != blank -%}
            {{ section.settings.card_image_desktop | image_url: width: 1200 | image_tag: loading: 'lazy', class: 'booking-card__image booking-card__image--desktop', alt: 'Booking card' }}
          {%- endif -%}

          <div class="booking-card__content">
            {%- if section.settings.icon_svg != blank -%}
              <div class="booking-card__icon">
                {{ section.settings.icon_svg }}
              </div>
            {%- endif -%}

            {%- if section.settings.heading != blank -%}
              <h2 class="booking-card__heading">{{ section.settings.heading }}</h2>
            {%- endif -%}

            {%- if section.settings.content != blank -%}
              <div class="booking-card__content-text">
                {{ section.settings.content }}
              </div>
            {%- endif -%}

            {%- if section.settings.button_text != blank -%}
              <div class="booking-card__button-wrapper">
                {%- render 'button', 
                  content: section.settings.button_text, 
                  href: section.settings.button_link,
                  size: section.settings.button_size,
                  style: section.settings.button_style,
                  secondary: section.settings.button_secondary,
                  background: section.settings.button_background,
                  text_color: section.settings.button_text_color
                -%}
              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

