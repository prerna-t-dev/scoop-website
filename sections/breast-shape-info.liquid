{%- render 'section-spacing-collapsing' -%}

<style>
  #shopify-section-{{ section.id }} .breast-shape-info {
    max-width: 750px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .breast-shape-info__header {
    margin-bottom: 40px;
    text-align: left;
  }

  #shopify-section-{{ section.id }} .breast-shape-info__title {
    font-family: var(--text-font-family);
    font-size: 18px;
    font-weight: 600;
    line-height: 1.3 !important;
    color: #FF615C;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .breast-shape-info__title p{
    font-weight: 600 !important;
  }

  #shopify-section-{{ section.id }} .breast-shape-info__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 36px;
  }

  #shopify-section-{{ section.id }} .breast-shape-info__card {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 20px;
    align-items: start;
  }

  #shopify-section-{{ section.id }} .breast-shape-info__card-icon {
    width: 60px;
    height: 60px;
    flex-shrink: 0;
    display: block;
  }

  #shopify-section-{{ section.id }} .breast-shape-info__card-content {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  #shopify-section-{{ section.id }} .breast-shape-info__card-title {
    font-family: var(--text-font-family);
    font-size: 10px;
    font-weight: 600;
    line-height: 1.5 !important;
    color: #000000;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  #shopify-section-{{ section.id }} .breast-shape-info__card-description {
    font-family: var(--text-font-family);
    font-size: 10px;
    font-weight: 400;
    line-height: 1.4;
    color: #000000;
    /* margin: 0 0 40px 0; */
  }

  #shopify-section-{{ section.id }} .breast-shape-info__card-styles {
    margin-top: var(--spacing-2);
  }

  #shopify-section-{{ section.id }} .breast-shape-info__card-styles-item {
    font-family: var(--text-font-family);
    font-size: 10px;
    font-weight: 400;
    line-height: 1.5;
    color: #000000;
    /* margin: 0 0 8px 0; */
  }

  #shopify-section-{{ section.id }} .breast-shape-info__card-styles-item strong{
    font-weight: 500 !important;
    letter-spacing: 0.05em !important;
  }

  #shopify-section-{{ section.id }} .breast-shape-info__card-styles-item:last-child {
    margin-bottom: 0;
  }

  #shopify-section-{{ section.id }} .breast-shape-info__card-styles-item a {
    color: #000000;
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  @media screen and (min-width: 700px) {
    #shopify-section-{{ section.id }} .breast-shape-info__header {
      margin-bottom: 64px;
      text-align: center;
    }

    #shopify-section-{{ section.id }} .breast-shape-info__title {
      font-size: 36px;
      line-height: 1.1 !important;
    }

    #shopify-section-{{ section.id }} .breast-shape-info__grid {
      gap: 64px;
      padding: 0 64px;
    }

    #shopify-section-{{ section.id }} .breast-shape-info__card {
      gap: 48px;
    }

    #shopify-section-{{ section.id }} .breast-shape-info__card-icon {
      width: 80px;
      height: 80px;
    }

    #shopify-section-{{ section.id }} .breast-shape-info__card-title {
      font-size: 18px;
      letter-spacing: 0.05em;
    }

    #shopify-section-{{ section.id }} .breast-shape-info__card-description {
      font-size: 18px;
      /* margin-bottom: 24px; */
    }

    #shopify-section-{{ section.id }} .breast-shape-info__card-styles-item {
      font-size: 18px;
    }

    #shopify-section-{{ section.id }} .breast-shape-info__card-styles-item strong{
      letter-spacing: 0.05em !important;
    }
  }
</style>

<div {% render 'section-properties' %}>
  <div class="breast-shape-info">
    {%- if section.settings.title != blank -%}
      <div class="breast-shape-info__header">
        <h2 class="breast-shape-info__title">{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="breast-shape-info__grid">
        {%- for block in section.blocks -%}
          <div class="breast-shape-info__card" {{ block.shopify_attributes }}>
            {%- if block.settings.icon != blank -%}
              <div class="breast-shape-info__card-icon-wrapper">
                {{ block.settings.icon | image_url: width: 200 | image_tag: loading: 'lazy', class: 'breast-shape-info__card-icon', alt: block.settings.title | default: 'Icon' }}
              </div>
            {%- endif -%}

            <div class="breast-shape-info__card-content">
              {%- if block.settings.title != blank -%}
                <h3 class="breast-shape-info__card-title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <p class="breast-shape-info__card-description">{{ block.settings.description }}</p>
              {%- endif -%}

              {%- if block.settings.styles_item_1 != blank or block.settings.styles_item_2 != blank -%}
                <div class="breast-shape-info__card-styles">
                  {%- if block.settings.styles_item_1 != blank -%}
                    <div class="breast-shape-info__card-styles-item">
                      {{ block.settings.styles_item_1 }}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.styles_item_2 != blank -%}
                    <div class="breast-shape-info__card-styles-item">
                      {{ block.settings.styles_item_2 }}
                    </div>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

