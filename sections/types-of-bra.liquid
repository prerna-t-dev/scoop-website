{%- render 'section-spacing-collapsing' -%}

<style>
  #shopify-section-{{ section.id }} .types-of-bra {
    max-width: 1000px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .types-of-bra__header {
    margin-bottom: var(--spacing-8);
    text-align: left;
  }

  #shopify-section-{{ section.id }} .types-of-bra__title {
    font-family: var(--heading-font-family);
    font-size: 24px;
    font-weight: 400;
    line-height: 1.3 !important;
    color: #000000;
    margin: 0 0 10px 0;
  }

  #shopify-section-{{ section.id }} .types-of-bra__description {
    font-family: var(--text-font-family);
    font-size: 14px;
    font-weight: 400;
    line-height: 1.4;
    color: #000000;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .types-of-bra__list {
    display: grid;
    grid-template-columns: 1fr;
    gap: 36px;
  }

  #shopify-section-{{ section.id }} .types-of-bra__item {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 18px;
    align-items: start;
  }

  #shopify-section-{{ section.id }} .types-of-bra__item-image {
    width: 80%;
    max-width: 200px;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .types-of-bra__item-content {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  #shopify-section-{{ section.id }} .types-of-bra__item-title {
    font-family: var(--text-font-family);
    font-size: 10px;
    font-weight: 600;
    line-height: 1.5 !important;
    color: #000000;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  #shopify-section-{{ section.id }} .types-of-bra__item-description {
    font-family: var(--text-font-family);
    font-size: 10px;
    font-weight: 400;
    line-height: 1.4;
    color: #000000;
    margin: 0;
  }

  @media screen and (min-width: 700px) {
    #shopify-section-{{ section.id }} .types-of-bra__header {
      margin-bottom: 64px;
    }

    #shopify-section-{{ section.id }} .types-of-bra__title {
      font-size: 56px;
      margin-bottom: var(--spacing-6);
    }

    #shopify-section-{{ section.id }} .types-of-bra__description {
      font-size: 22px;
    }

    #shopify-section-{{ section.id }} .types-of-bra__list {
      gap: 48px;
    }

    #shopify-section-{{ section.id }} .types-of-bra__item {
      grid-template-columns: auto 1fr;
      gap: 32px;
      align-items: center;
    }

    #shopify-section-{{ section.id }} .types-of-bra__item-image {
      max-width: 250px;
      margin: 0;
    }

    #shopify-section-{{ section.id }} .types-of-bra__item-title {
      font-size: 18px;
      letter-spacing: 0.05em;
    }

    #shopify-section-{{ section.id }} .types-of-bra__item-description {
      font-size: 18px;
    }
  }
</style>

<div {% render 'section-properties' %}>
  <div class="types-of-bra">
    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="types-of-bra__header">
        {%- if section.settings.title != blank -%}
          <h2 class="types-of-bra__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="types-of-bra__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="types-of-bra__list">
        {%- for block in section.blocks -%}
          <div class="types-of-bra__item" {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              <div class="types-of-bra__item-image-wrapper">
                {{ block.settings.image | image_url: width: 500 | image_tag: loading: 'lazy', class: 'types-of-bra__item-image', alt: block.settings.title | default: 'Bra type' }}
              </div>
            {%- endif -%}

            <div class="types-of-bra__item-content">
              {%- if block.settings.title != blank -%}
                <h3 class="types-of-bra__item-title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <p class="types-of-bra__item-description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

