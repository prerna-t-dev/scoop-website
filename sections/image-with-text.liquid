<style>
  #shopify-section-{{ section.id }} {
    --image-with-text-background: {{ section.settings.background_color }};
  }

  #shopify-section-{{ section.id }} .image-with-text {
    background: var(--image-with-text-background);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: {{ section.settings.padding_mobile }}px;
    gap: {{ section.settings.gap_mobile }}px;
  }

  #shopify-section-{{ section.id }} .image-with-text__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    gap: {{ section.settings.gap_mobile }}px;
  }

  #shopify-section-{{ section.id }} .image-with-text__header,
  #shopify-section-{{ section.id }} .image-with-text__footer {
    text-align: center;
    width: 100%;
  }

  #shopify-section-{{ section.id }} .image-with-text__image {
    max-width: 100%;
    width: 100%;
  }

  #shopify-section-{{ section.id }} .image-with-text__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Hide desktop image on mobile */
  #shopify-section-{{ section.id }} .image-with-text__image--desktop {
    display: none;
  }

  #shopify-section-{{ section.id }} .image-with-text__eyebrow {
    font-size: {{ section.settings.eyebrow_font_size }}px;
    font-weight: {{ section.settings.eyebrow_font_weight }};
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 16px;
    color: {{ section.settings.eyebrow_color }};
  }

  #shopify-section-{{ section.id }} .image-with-text__heading {
    font-family: var(--heading-font-family);
    font-size: {{ section.settings.heading_font_size_mobile }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    line-height: 1.2;
    margin-bottom: 24px;
    color: {{ section.settings.heading_color }};
    font-style: {{ section.settings.heading_font_style }} !important;
  }
  

  #shopify-section-{{ section.id }} .image-with-text__text {
    font-size: {{ section.settings.content_font_size }}px;
    line-height: 1.6;
    margin-bottom: 32px;
    color: {{ section.settings.content_color }};
  }

  @media screen and (min-width: 700px) {
    #shopify-section-{{ section.id }} .image-with-text {
      flex-direction: {{ section.settings.desktop_layout }};
      align-items: center;
      padding: {{ section.settings.padding_desktop }}px;
      gap: {{ section.settings.gap_desktop }}px;
    }

    #shopify-section-{{ section.id }} .image-with-text__content {
      flex: 1;
      text-align: {{ section.settings.desktop_text_align }};
    }

    #shopify-section-{{ section.id }} .image-with-text__header,
    #shopify-section-{{ section.id }} .image-with-text__footer {
      text-align: {{ section.settings.desktop_text_align }};
    }

    #shopify-section-{{ section.id }} .image-with-text__image--desktop {
      display: block;
      flex: 1;
      max-width: {{ section.settings.image_max_width }}%;
    }

    /* Hide mobile image on desktop */
    #shopify-section-{{ section.id }} .image-with-text__image--mobile {
      display: none;
    }

    #shopify-section-{{ section.id }} .image-with-text__heading {
      font-size: {{ section.settings.heading_font_size_desktop }}px;
    }
  }
</style>

