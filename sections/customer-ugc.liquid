<div {% render 'section-properties' %}>
  <div class="section-stack">
    <div class="customer-ugc">
      {%- if section.settings.heading != blank -%}
        <h2 class="customer-ugc__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      <div class="customer-ugc__videos">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'video' -%}
              <div class="customer-ugc__video" {{ block.shopify_attributes }}>
                <div class="customer-ugc__video-container" id="video-container-{{ block.id }}">
                  {%- if block.settings.video_thumbnail != blank -%}
                    {{ block.settings.video_thumbnail | image_url: width: 400 | image_tag: class: 'customer-ugc__video-thumbnail', loading: 'lazy' }}
                  {%- else -%}
                    <div class="customer-ugc__video-thumbnail" style="background-color: #e5e5e5; display: flex; align-items: center; justify-content: center; color: #999;">
                      <span>Video Thumbnail</span>
                    </div>
                  {%- endif -%}
                  
                  <button class="customer-ugc__play-button" onclick="playVideo('{{ block.id }}', '{{ block.settings.video_url }}')">
                    <svg class="customer-ugc__play-icon" width="59" height="59" viewBox="0 0 59 59" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <circle cx="29.7531" cy="29.8154" r="27.9459" fill="black" fill-opacity="0.5" stroke="white" stroke-width="2.32882"/>
                      <path d="M44.8896 29.8151L22.1836 42.9244L22.1836 16.7058L44.8896 29.8151Z" fill="white"/>
                    </svg>
                  </button>
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  function playVideo(blockId, videoUrl) {
    const container = document.getElementById('video-container-' + blockId);
    const playButton = container.querySelector('.customer-ugc__play-button');
    const thumbnail = container.querySelector('.customer-ugc__video-thumbnail');
    
    if (!videoUrl) return;
    
    // Hide thumbnail and play button
    thumbnail.style.display = 'none';
    playButton.style.display = 'none';
    
    // Create video element
    const video = document.createElement('video');
    video.controls = true;
    video.autoplay = true;
    video.style.width = '100%';
    video.style.height = '100%';
    video.style.objectFit = 'cover';
    
    // Handle different video platforms
    if (videoUrl.includes('youtube.com') || videoUrl.includes('youtu.be')) {
      // Extract YouTube video ID
      let videoId = '';
      if (videoUrl.includes('youtu.be/')) {
        videoId = videoUrl.split('youtu.be/')[1].split('?')[0];
      } else if (videoUrl.includes('youtube.com/watch')) {
        videoId = videoUrl.split('v=')[1].split('&')[0];
      }
      
      // Create YouTube iframe
      const iframe = document.createElement('iframe');
      iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0`;
      iframe.style.width = '100%';
      iframe.style.height = '100%';
      iframe.style.border = 'none';
      iframe.allowFullscreen = true;
      
      container.appendChild(iframe);
    } else if (videoUrl.includes('vimeo.com')) {
      // Extract Vimeo video ID
      const videoId = videoUrl.split('vimeo.com/')[1].split('?')[0];
      
      // Create Vimeo iframe
      const iframe = document.createElement('iframe');
      iframe.src = `https://player.vimeo.com/video/${videoId}?autoplay=1`;
      iframe.style.width = '100%';
      iframe.style.height = '100%';
      iframe.style.border = 'none';
      iframe.allowFullscreen = true;
      
      container.appendChild(iframe);
    } else {
      // Direct video file
      video.src = videoUrl;
      container.appendChild(video);
    }
  }
</script>

