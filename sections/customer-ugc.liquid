<style>
  #shopify-section-{{ section.id }} {
    --customer-ugc-max-width: 750px;
  }

  #shopify-section-{{ section.id }} .customer-ugc {
    max-width: var(--customer-ugc-max-width);
    margin: 0 auto;
    padding: 0 0;
  }

  #shopify-section-{{ section.id }} .customer-ugc__heading {
    font-family: var(--heading-font-family);
    font-size: 24px;
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: 32px;
    text-align: left;
    color: #000000;
  }

  #shopify-section-{{ section.id }} .customer-ugc__videos {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 16px;
  }

  #shopify-section-{{ section.id }} .customer-ugc__video {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 9/16;
    background-color: #f5f5f5;
  }

  #shopify-section-{{ section.id }} .customer-ugc__video-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  #shopify-section-{{ section.id }} .customer-ugc__play-button {
    position: absolute;
    bottom: 8px;
    left: 8px;
    width: 59px;
    height: 59px;
    background: none;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
    padding: 0 !important;
    transform: scale(0.8);
  }

  #shopify-section-{{ section.id }} .customer-ugc__play-button:hover {
    transform: scale(0.85);
  }

  #shopify-section-{{ section.id }} .customer-ugc__play-icon {
    width: 59px;
    height: 59px;
  }

  @media screen and (min-width: 700px) {
    #shopify-section-{{ section.id }} .customer-ugc__heading {
      font-size: 32px;
    }

    #shopify-section-{{ section.id }} .customer-ugc__videos {
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }

    #shopify-section-{{ section.id }} .customer-ugc__play-button {
      bottom: 20px;
      left: 20px;
      transform: scale(1);
    }

    #shopify-section-{{ section.id }} .customer-ugc__play-button:hover {
      transform: scale(1.05);
    }
  }

  @media screen and (min-width: 1200px) {
    #shopify-section-{{ section.id }} .section-full {
      padding-left: 212px !important;
      padding-right: 212px !important;
    }
  }
</style>

